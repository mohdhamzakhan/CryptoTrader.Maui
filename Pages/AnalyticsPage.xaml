<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoTrader.Maui.Pages.AnalyticsPage"
             Title="AnalyticsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Trading Performance" FontSize="24" FontAttributes="Bold"/>

            <Button Text="View Trade History" Clicked="OnViewHistoryClicked"/>
            <Button Text="Export Reports" Clicked="OnExportReportsClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>