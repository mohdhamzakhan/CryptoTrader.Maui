<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoTrader.Maui.Pages.DashboardPage"
             Title="DashboardPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Portfolio Summary Section -->
            <Label Text="Portfolio Summary" FontSize="24" FontAttributes="Bold" HorizontalOptions="Start" />
            <Label Text="Total Balance: ₹0" x:Name="BalanceLabel" FontSize="18" HorizontalOptions="Start" />

            <!-- Live Market Data Section -->
            <Label Text="Live Market Data" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5" HorizontalOptions="Start" />
            <ListView x:Name="MarketListView" HeightRequest="200" SeparatorVisibility="Default" BackgroundColor="#f9f9f9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10" Spacing="10" BackgroundColor="White" Margin="0,5">
                                <Label Text="{Binding Symbol, StringFormat='Coin: {0}'}" FontSize="16" VerticalOptions="Center" TextColor="#333" />
                                <Label Text="{Binding Ask, StringFormat='Ask: {0:F6}'}" FontSize="16" VerticalOptions="Center" TextColor="Green" />
                                <Label Text="{Binding Bid, StringFormat='Bid: {0:F6}'}" FontSize="16" VerticalOptions="Center" TextColor="Red" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Open Orders Section -->
            <Label Text="Open Orders" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5" HorizontalOptions="Start" />
            <ListView x:Name="OpenOrdersListView" HeightRequest="250" SeparatorVisibility="Default" BackgroundColor="#f9f9f9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Spacing="5" BackgroundColor="White" Margin="0,5">
                                <Label Text="{Binding Symbol}" FontSize="16" FontAttributes="Bold" TextColor="#333" />
                                <Label Text="Price: ₹{Binding Price}" FontSize="14" TextColor="#555" />
                                <Label Text="Quantity: {Binding OrigQty}" FontSize="14" TextColor="#555" />
                                <Label Text="Status: {Binding Status}" FontSize="14" TextColor="#555" />
                                <Label Text="Side: {Binding Side}" FontSize="14" TextColor="#555" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Refresh Button -->
            <Button Text="Refresh Data" BackgroundColor="#0078d4" TextColor="White" FontSize="16" Padding="10,5" CornerRadius="5" Clicked="OnRefreshClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
