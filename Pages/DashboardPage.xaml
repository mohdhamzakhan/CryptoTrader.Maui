<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoTrader.Maui.Pages.DashboardPage"
             Title="DashboardPage">
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Portfolio Summary" FontSize="24" FontAttributes="Bold"/>
            <Label Text="Total Balance: ₹0" x:Name="BalanceLabel" FontSize="18"/>

            <Label Text="Live Market Data" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5"/>
            <ListView x:Name="MarketListView" HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="{Binding Symbol, StringFormat= 'Coin -: {0} '}" FontSize="16"/>
                                <Label Text="{Binding Ask, StringFormat=' Ask -: {0:F6} '}" FontSize="16"/>
                                <Label Text="{Binding Bid, StringFormat=' Bid -: {0:F6} '}" FontSize="16"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Open Orders" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5"/>
            <ListView x:Name="OpenOrdersListView" HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Symbol}" FontSize="16" FontAttributes="Bold"/>
                                <Label Text="Price: ₹{Binding Price}" FontSize="14"/>
                                <Label Text="Quantity: {Binding OrigQty}" FontSize="14"/>
                                <Label Text="Status: {Binding Status}" FontSize="14"/>
                                <Label Text="Side: {Binding Side}" FontSize="14"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Refresh Data" Clicked="OnRefreshClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
